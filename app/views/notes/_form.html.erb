<%= form_with(model: note, local: true) do |form| %>
  <div class = "d-flex justify-content-center col-12 flex-wrap text-center">
    <% if note.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(note.errors.count, "つの") %>エラーがあります</h2>
  
        <ul>
          <% note.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
  </div>
  <% end %>
  <div class = "field  d-flex justify-content-center col-12 flex-wrap">
      <%= form.label :title , class: "from-control col-10"%>
      <%= form.text_field :title, class: "from-control col-10"%>
    </div>

    <div class="field  d-flex justify-content-center col-12 flex-wrap" >
      <%= form.label :author, class: "from-control col-10" %>
      <%= form.text_field :author , class: "from-control col-10"%>
    </div>

    <div class="field  d-flex justify-content-center col-12 flex-wrap">
      <%= form.label :content , class: "from-control col-10"%>
      <%= form.text_area :content , class: "from-control col-10"%>
    </div>

    <div class="actions field  d-flex justify-content-center col-12 flex-wrap mt-5">
      <button class = "btn btn-light col-10 "><%= form.submit %></button>
    </div>
  </div>
<% end %>
