<div class = "card mb-2 mt-5">
  <div class= "card-header">
    <h3>タイトル</h3>
  </div>
  <div class ="card-body">
    <div class ="card-text">
      <%= @note.title %>
    </div>
  </div>
</div>
<div class = "card mb-2">
  <div class= "card-header">
    <h3>作成者</h3>
  </div>
  <div class ="card-body">
    <div class ="card-text">
      <%= @note.author %>
    </div>
  </div>
</div>
<div class = "card mb-2">
  <div class= "card-header">
    <h3>内容</h3>
  </div>
  <div class ="card-body">
    <div class ="card-text">
      <%= @note.content %>
    </div>
  </div>
</div>
<div class ="d-flex justify-content-center">
  <button class = "btn btn-primary col-6 "><%= link_to '編集', edit_note_path(@note) ,class:"text-white"%></button>
</div>
